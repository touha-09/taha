#include "header.h"

// Fonction principale du programme
int main(int argc, char* argv[]) {
    SDL_Init(SDL_INIT_VIDEO);   // Initialisation de SDL
    TTF_Init();                 // Initialisation de SDL_ttf

    SDL_Surface* screen = SDL_SetVideoMode(SCREEN_WIDTH, SCREEN_HEIGHT, 32, SDL_SWSURFACE);
    SDL_WM_SetCaption("Puzzle Game", NULL); // D√©finir le titre de la fen√™tre

    // Charger les images
    SDL_Surface* bg = loadImage("background.png"); // Fond de l'√©cran
    SDL_Surface* star = loadImage("star.png");  // Pi√®ce ‚≠ê
    SDL_Surface* gem = loadImage("gem.png");    // Pi√®ce üíé
    SDL_Surface* box = loadImage("box.png");    // Pi√®ce üì¶
    SDL_Surface* bomb = loadImage("bomb.png");  // Pi√®ce üí£

    // Initialisation des pi√®ces du puzzle
    Piece pieces[4];
    pieces[0].image = star;
    pieces[1].image = gem;
    pieces[2].image = box;
    pieces[3].image = bomb;

    // Initialisation des positions des pi√®ces
    for (int i = 0; i < 4; i++) {
        pieces[i].pos.x = 100 * i + 50;
        pieces[i].pos.y = 300;
        pieces[i].targetRow = i / 2; // 2 lignes
        pieces[i].targetCol = i % 2; // 2 colonnes
        pieces[i].isPlaced = 0;
    }

    // M√©langer les pi√®ces pour la r√©solution
    shufflePieces(pieces, 4);

    // Initialisation de l'√©tat du jeu
    int quit = 0;
    int gameState = 0; // 0 = jeu en cours, 1 = gagn√©, 2 = perdu

    SDL_Event event;
    while (!quit) {
        while (SDL_PollEvent(&event)) {
            if (event.type == SDL_QUIT) {
                quit = 1;
            }
        }

        // Dessiner l'√©cran
        SDL_BlitSurface(bg, NULL, screen, NULL);

        // Affichage des pi√®ces
        for (int i = 0; i < 4; i++) {
            SDL_BlitSurface(pieces[i].image, NULL, screen, &pieces[i].pos);
        }

        // Affichage du texte en cas de succ√®s ou √©chec
        if (gameState == 1) {
            showText(screen, "Vous avez gagn√©!", (SDL_Color){0, 255, 0});
        } else if (gameState == 2) {
            showText(screen, "Vous avez perdu!", (SDL_Color){255, 0, 0});
        }

        // Afficher l'image de fin (exemple : "xxxx.png")
        if (gameState == 1 || gameState == 2) {
            displayEndImage(screen, "xxxx.png");
        }

        SDL_Flip(screen); // Actualiser l'√©cran
        SDL_Delay(100);   // D√©lai pour √©viter une utilisation excessive du processeur
    }

    // Lib√©rer la m√©moire
    SDL_FreeSurface(bg);
    SDL_FreeSurface(star);
    SDL_FreeSurface(gem);
    SDL_FreeSurface(box);
    SDL_FreeSurface(bomb);
    
    SDL_Quit();         // Quitter SDL
    TTF_Quit();         // Quitter SDL_ttf

    return 0;
}
